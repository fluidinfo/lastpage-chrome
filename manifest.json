{
  "name": "LastPage.me",
  "version": "0.2.2",
  "description": "This extension adds a button to store your current page location, which you can share with friends.",
  "background_page": "background.html",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "LastPage.me",
    "default_popup": "popup.html"
  },
  "icons": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "unlimited_storage",
    "https://fluiddb.fluidinfo.com/*",
    "http://*/*",
    "https://*/*"
  ]
}
