{
  "name": "LastPage.me",
  "version": "0.2.2",
  "description": "This extension adds a button to store your current page location, which you can share with friends.",
  "icons": { "16": "icon-16px.png",
             "48": "icon-48px.png",
            "128": "icon-128px.png"},
  "background_page": "background.html",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "LastPage.me",
  },
  "permissions": [
    "tabs",
    "unlimited_storage",
    "https://fluiddb.fluidinfo.com/*",
    "http://*/*",
    "https://*/*"
  ]
}
